    Public Sub ShowDataByFilters()
        If txtBlueprintNumber.Text = "" Then
            BlueprintFilter = ""
        Else
            BlueprintFilter = " AND BlueprintNumber = '" + txtBlueprintNumber.Text + "'"
        End If
        If txtTextSearch.Text = "" Then
            TextFilter = ""
        Else
            TextFilter = " AND EntryTitle LIKE '%" + txtTextSearch.Text + "%'"
        End If
        If txtTextSearch.Text = "" Then
            TextFilter2 = ""
        Else
            TextFilter2 = " AND EntryDetails LIKE '%" + txtTextDetails.Text + "%'"
        End If
        If chkDateRange.Checked = False Then
            DateFilter = ""
        Else
            DateFilter = " AND EntryDate BETWEEN @BeginDate AND @EndDate"
        End If

        cmd = New SqlCommand("SELECT * FROM BlueprintJournal WHERE EntryKey <> @EntryKey" + BlueprintFilter + TextFilter + TextFilter2 + DateFilter + " ORDER BY EntryDate DESC", con)
        cmd.Parameters.Add("@EntryKey", SqlDbType.VarChar).Value = 0
        cmd.Parameters.Add("@BeginDate", SqlDbType.VarChar).Value = dtpBeginDate.Text
        cmd.Parameters.Add("@EndDate", SqlDbType.VarChar).Value = dtpEndDate.Text
        If con.State = ConnectionState.Closed Then con.Open()
        ds = New DataSet()
        myAdapter.SelectCommand = cmd
        myAdapter.Fill(ds, "BlueprintJournal")
        dgvBlueprintJournal.DataSource = ds.Tables("BlueprintJournal")
        con.Close()
    End Sub

