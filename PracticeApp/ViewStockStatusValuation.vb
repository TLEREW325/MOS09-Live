    Public Sub ShowData()
        If cboPartNumber.Text <> "" Then
            PartFilter = " AND ItemID >= '" + cboPartNumber.Text + "'"
        Else
            PartFilter = ""
        End If
        If cboItemClass.Text <> "" Then
            ItemClassFilter = " AND ItemClass = '" + cboItemClass.Text + "'"
        Else
            ItemClassFilter = ""
        End If
        If chkOmit.Checked = True Then
            ZeroFilter = " AND (QuantityOnHand <> '0' OR ValuationQuantity <> '0')"
        Else
            ZeroFilter = ""
        End If
        If txtTextFilter.Text <> "" Then
            TextFilter = " AND (ItemID LIKE '%" + txtTextFilter.Text + "%' OR ShortDescription LIKE '%" + txtTextFilter.Text + "%')"
        Else
            TextFilter = ""
        End If
        If chkOmitEqualQty.Checked = True Then
            ValueQtyFilter = " AND QuantityOnHand <> ValuationQuantity"
        Else
            ValueQtyFilter = ""
        End If

        cmd = New SqlCommand("SELECT * FROM StockStatusValuationFinal WHERE DivisionID = @DivisionID" + PartFilter + ZeroFilter + ItemClassFilter + ValueQtyFilter + TextFilter + " ORDER BY ItemID", con)
        cmd.Parameters.Add("@DivisionID", SqlDbType.VarChar).Value = cboDivisionID.Text
        If con.State = ConnectionState.Closed Then con.Open()
        ds = New DataSet()
        myAdapter.SelectCommand = cmd
        myAdapter.Fill(ds, "StockStatusValuationFinal")
        dgvStockStatus.DataSource = ds.Tables("StockStatusValuationFinal")
        con.Close()
    End Sub

