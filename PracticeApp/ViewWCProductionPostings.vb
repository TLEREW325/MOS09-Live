    Public Sub ShowDataByFilters()
        cmd = New SqlCommand("SELECT * FROM FerruleProductionLineQuery WHERE DivisionID = @DivisionID", con)
        Dim TotalString As String = "SELECT SUM(ProductionQuantity) as TotalQuantity, SUM(ExtendedCost) as TotalCost FROM FerruleProductionLineQuery WHERE DivisionID = @DivisionID"
        cmd.Parameters.Add("@DivisionID", SqlDbType.VarChar).Value = cboDivisionID.Text

        If Not String.IsNullOrEmpty(cboPartNumber.Text) Then
            cmd.CommandText += " AND PartNumber = @PartNumber"
            TotalString += " AND PartNumber = @PartNumber"
            cmd.Parameters.Add("@PartNumber", SqlDbType.VarChar).Value = cboPartNumber.Text
        End If
        If Not String.IsNullOrEmpty(cboBatchNumber.Text) Then
            cmd.CommandText += " AND FerruleTransactionKey = @FerruleTransactionKey"
            TotalString += " AND FerruleTransactionKey = @FerruleTransactionKey"
            cmd.Parameters.Add("@FerruleTransactionKey", SqlDbType.Int).Value = Val(cboBatchNumber.Text)
        End If
        If chkUseDateRange.Checked Then
            cmd.CommandText += " AND ProductionDate BETWEEN @BeginDate AND @EndDate"
            TotalString += " AND ProductionDate BETWEEN @BeginDate AND @EndDate"
            cmd.Parameters.Add("@BeginDate", SqlDbType.Date).Value = dtpBeginDate.Value
            cmd.Parameters.Add("@EndDate", SqlDbType.Date).Value = dtpEndDate.Value
        End If
        If chkShowRemoval.Checked Then
            cmd.CommandText += " AND ProductionQuantity >= 0"
            TotalString += " AND ProductionQuantity >= 0"
        End If

        If con.State = ConnectionState.Closed Then con.Open()
        ds = New DataSet()
        myAdapter.SelectCommand = cmd
        myAdapter.Fill(ds, "FerruleProductionLineQuery")

        cmd.CommandText = TotalString

        If con.State = ConnectionState.Closed Then con.Open()
        Dim reader As SqlDataReader = cmd.ExecuteReader()
        If reader.HasRows Then
            reader.Read()
            If reader.IsDBNull(0) Then
                TotalQuantity = 0
            Else
                TotalQuantity = reader.Item("TotalQuantity")
            End If
            If reader.IsDBNull(1) Then
                TotalAmount = 0
            Else
                TotalAmount = reader.Item("TotalCost")
            End If
        End If
        reader.Close()
        con.Close()

        dgvWCProduction.DataSource = ds.Tables("FerruleProductionLineQuery")

        lblTotalAmount.Text = FormatCurrency(TotalAmount)
        lblTotalQuantity.Text = FormatNumber(TotalQuantity, 2)
    End Sub

