    Public Sub LoadAssemblies()
        cmd = New SqlCommand("SELECT * FROM ItemList WHERE PurchProdLineID = @PurchProdLineID AND DivisionID = @DivisionID", con)
        cmd.Parameters.Add("@PurchProdLineID", SqlDbType.VarChar).Value = "ASSEMBLY"
        cmd.Parameters.Add("@DivisionID", SqlDbType.VarChar).Value = cboDivisionID.Text
        If con.State = ConnectionState.Closed Then con.Open()
        ds = New DataSet()
        myAdapter.SelectCommand = cmd
        myAdapter.Fill(ds, "ItemList")
        dgvItemAssemblyList.DataSource = ds.Tables("ItemList")
        con.Close()
    End Sub

